{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "TokenSettings": {
    "Secret": "This is used to sign and verify jwt tokens, replace with your own secret",
    "Issuer": "mango-auth-api",
    "Audience": "mango-clients"
  },
  //"CoupanApi": "https://localhost:44381",
  //"AuthApi": "https://localhost:44372",
  //"ProductApi": "https://localhost:44358",
  //"ShoppingCartApi": "https://localhost:44309",

  "Routes": [
    //Product Configurations
    {
      "UpstreamHttpMethod": [ "Get" ],
      "UpstreamPathTemplate": "/api/Product",
      "DownstreamPathTemplate": "/api/Product",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 44358
        }
      ]
    },
    {
      "UpstreamHttpMethod": [ "Get", "DELETE" ],
      "UpstreamPathTemplate": "/api/Product/{id}",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      },
      "DownstreamPathTemplate": "/api/Product/{id}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 44358
        }
      ]
    },
    {
      "UpstreamHttpMethod": [ "POST" ],
      "UpstreamPathTemplate": "/api/Product/CreateProduct",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      },
      "DownstreamPathTemplate": "/api/Product/CreateProduct",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 44358
        }
      ]
    },
    {
      "UpstreamHttpMethod": [ "PUT" ],
      "UpstreamPathTemplate": "/api/Product",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      },
      "DownstreamPathTemplate": "/api/Product",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 44358
        }
      ]
    },
    //coupan configurations
    {
      "UpstreamHttpMethod": [ "Get","PUT" ],
      "UpstreamPathTemplate": "/api/CoupanApi",
      "DownstreamPathTemplate": "/api/CoupanApi",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 44381
        }
      ]
    },
    {
      "UpstreamHttpMethod": [ "POST" ],
      "UpstreamPathTemplate": "/api/CoupanApi/CreateCoupan",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      },
      "DownstreamPathTemplate": "/api/CoupanApi/CreateCoupan",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 44381
        }
      ]
    },
    {
      "UpstreamHttpMethod": [ "DELETE" ],
      "UpstreamPathTemplate": "/api/CoupanApi/deleteCoupan/{id}",
      "DownstreamPathTemplate": "/api/CoupanApi/deleteCoupan/{id}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 44381
        }
      ]
    },
    {
      "UpstreamHttpMethod": [ "GET" ],
      "UpstreamPathTemplate": "/api/CoupanApi/{id}",
      "DownstreamPathTemplate": "/api/CoupanApi/{id}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 44381
        }
      ]
    },
    {
      "UpstreamHttpMethod": [ "Get" ],
      "UpstreamPathTemplate": "/api/CoupanApi/getByCode/{coupanCode}",
      "DownstreamPathTemplate": "/api/CoupanApi/getByCode/{coupanCode}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 44381
        }
      ]
    }
  ],
    "GlobalConfiguration": {
      "BaseUrl": "https://localhost:7069"
    
  }
}
