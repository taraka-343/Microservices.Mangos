@model registrationRequestDto
<form method="post">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Register</h1>
        </div>
        @* <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div> *@
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Email" class="form-control" placeholder="Email..." />
                <span asp-validation-for="Email" class="text-danger"/>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Name" class="form-control" placeholder="Name..." />
                <span asp-validation-for="Name" class="text-danger" />

            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="PhoneNumber" class="form-control" placeholder="PhoneNumber..." />
                <span asp-validation-for="PhoneNumber" class="text-danger" />

            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Password" class="form-control" placeholder="Password..." />
                <span asp-validation-for="Password" class="text-danger" />

            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <select asp-for="role" class="form-control" asp-items="@ViewBag.roleList">
                    <option disabled selected>-- select role --</option>
                </select>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2 mt-5">
                <button asp-controller="Auth" asp-action="Register" type="submit" class="form-control btn btn-success" value="Submit">Register</button>
            </div>
        </div>
    </div>
</form>
@* used for exc validation in ui
 *@
 @section scripts{
    <partial name="_ValidationScriptsPartial"/>
}
