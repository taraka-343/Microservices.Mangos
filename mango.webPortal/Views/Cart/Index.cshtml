@model CartDto
@if (Model.CartHeader!=null & Model.CartDetails?.Count()>0){
<form method="post">
    <input asp-for="CartHeader.userId" hidden/>
    <input asp-for="CartHeader.cartHeaderId" hidden/>
    <br />
    <div class="">
        <div class="card border mt-4 container">
            <div class="card-header bg-dark text-light ml-0 row ">
                <div class="col-6">
                    <h3 class="text-success"><i class="bi bi-cart"></i> &nbsp; Shopping Cart</h3>
                </div>
                <div class="col-6 text-end">
                    <a class="btn btn-outline-warning mt-2 btn-sm" asp-controller="Home" asp-action="Index">Continue Shopping</a>
                </div>
            </div>
            <div class="card-body">
                <div class=" d-none d-lg-block">
                    <div class="row text-info">
                        <div class="col-lg-2">
                        </div>
                        <div class="col-lg-5">
                            Product Details
                        </div>
                        <div class="col-lg-2">
                            Price
                        </div>
                        <div class="col-lg-2">
                            Count
                        </div>
                        <div class="col-lg-1">
                        </div>
                    </div>
                </div>
                <hr />
                @foreach (var objCartDetails in Model.CartDetails)
                {
                    <div class="row h-100">
                        <div class="col-4 col-md-2 text-center py-2">
                            <img src="@objCartDetails.Product.ImageUrl" class="rounded" width="100%" />
                        </div>
                        <div class="col-8 col-md-5">
                            <h5>@objCartDetails.Product.name</h5>
                            <div style="font-size:11px;">@Html.Raw(objCartDetails.Product.Description)</div>
                        </div>
                        <div class="col-3 col-md-2 pt-md-4" style="font-size:11px;">
                            <span style="font-size:17px;">@string.Format("{0:C}",objCartDetails.Product.price)</span>
                        </div>
                        <div class="col-3 col-md-2 pt-md-4" style="font-size:11px;">
                            <span style="font-size:17px;"> @objCartDetails.count</span>
                        </div>
                        <div class="col-2 col-lg-1 p-0 pt-lg-4 text-center">
                            <a class="btn btn-sm btn-danger" asp-controller="Cart" asp-action="Remove" asp-route-cartDeailsId="@objCartDetails.cartDetailsId">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                    </div>
                }
                <hr />
                <div class="row">
                    <div class="col-6">
                        @if (string.IsNullOrEmpty(Model.CartHeader.coupanCode))
                        {
                            <span>Coupon:</span>
                            <input asp-for="CartHeader.coupanCode"/>
                            <button type="submit" class="btn btn-sm btn-success" asp-controller="Cart" asp-action="applyCoupan"> Apply </button>
                        }
                        else
                        {
                            <span>Coupon:</span>
                            <input asp-for="CartHeader.coupanCode" disabled />
                            <button type="submit" class="btn btn-sm btn-success" asp-controller="Cart" asp-action="removeCoupan"> remove </button>
                        }
                    </div>
                    <div class="col-6 text-end">
                        <span class="text-danger" style="font-size:21px;">  Order Total : @string.Format("{0:C}",Model.CartHeader.cartTotal) <br /></span>
                        @if(Model.CartHeader.discount>0){
                        <span class="text-success"> Order Discount : @string.Format("{0:C}",Model.CartHeader.discount)</span>
                        }
                    </div>
                </div>
            </div>
            <div class="card-footer row">
                <div class="col-6 col-md-3 ">
                    <button type="submit" class="btn btn-outline-danger form-control">Email Cart</button>
                </div>
                <div class="col-6 col-md-3 offset-md-6">
                    <button disabled class="btn btn-success form-control " value="Checkout (Comming Soon!)" />
                </div>
            </div>
        </div>
    </div>
</form>
}
else{
    <div>
        <p>Please Add Items to Shopping Cart...</p>
    </div>
}